  <distributionManagement>

    <!-- Automatically publish the site to http://maven.facsim.org/ -->
    <site>
      <id>maven.facsim.org</id>
      <url>scp://facsim.org/kunden/homepages/14/d187450819/htdocs/maven</url>
    </site>

    <!-- Automatically publish distributable files to SourceForge -->
    <repository>
      <id>shell.sourceforge.net</id>
      <url>scp://shell.sourceforge.net/home/frs/project/f/fa/facsimile</url>
    </repository>
    
  </distributionManagement>
</project>